{
 
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "--harmony",
                "--no-deprecation",
                "run-script",
                "debug"
            ],
            "protocol": "inspector",
 
            "smartStep": true,
            
            "port": 9226
        }
    ]
}